<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButton</item>
        <item name="actionBarWidgetTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="searchViewStyle">@style/SearchView</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="no_white_underline">
        <item name="colorControlActivated">@color/colorBlack</item>
    </style>

    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="android:colorAccent">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:colorPrimary">@color/colorBlack</item>
        <item name="android:headerMonthTextAppearance">@color/colorBlack</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorWhite</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/ButtonStyle</item>
        <item name="android:windowTitleStyle">@style/headerTextAppearance</item>
        <item name="android:textAppearanceMedium">@style/message</item>
    </style>

    <style name="headerTextAppearance">
        <item name="android:textAppearance">@style/header</item>
    </style>

    <style name="header">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="message">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorBlack</item>
        <item name="tint">@color/colorWhite</item>
    </style>

    <style name="SearchView" parent="Base.Widget.AppCompat.SearchView" >
        <item name="searchIcon">@color/colorWhite</item>
        <item name="suggestionRowLayout">@layout/suggestion_dropdown</item>
    </style>
</resources>
