<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/monthlyTransactionActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthlyTransactionActivity">

    <include layout="@layout/content_monthly_transaction" />

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="90dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="next month"
        android:src="@drawable/ic_chevron_left"
        android:text="Button"
        android:transitionName="changePrevMonth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="90dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="previous month"
        android:src="@drawable/ic_chevron_right"
        android:text="Button"
        android:transitionName="changeNextMonth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>