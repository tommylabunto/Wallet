<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthlyBudgetActivity"
    android:id="@+id/monthlyBudgetActivity">

    <include layout="@layout/content_monthly_budget" />

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="90dp"
        android:layout_gravity="bottom|end"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/next_year"
        android:src="@drawable/ic_chevron_left"
        app:layout_constraintBottom_toTopOf="@+id/fab"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="90dp"
        android:layout_gravity="bottom|end"
        android:contentDescription="@string/previous_year"
        android:src="@drawable/ic_chevron_right"
        android:background="?android:selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/fab"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>